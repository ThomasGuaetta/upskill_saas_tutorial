<!-- User Sign Up Page -->
<div class='container'>
  <div class = 'row'>
    <div class='col-md-4 col-md-offset-4'>
      
      <!-- Utilizing Query-String Parameters, show Pro/Basic Sign-Up Form Title-->
      <% if params[:plan] == '2' %>
              <h3 class = 'text-center'>Pro Account Sign Up</h3>
              <p class='text-center'>Sign up for a pro account for $10/month and get access to the full community with contact information!</p>
              <!-- Calls for _pro_form.html.erb -->
              <%= render "pro_form" %>
      <% else %>
              <h3 class = 'text-center'>Basic Account Sign Up</h3>
              <p class='text-center'>Sign up for free and get basic access to the community.</p>
              <!-- Calls for _basic_form.html.erb -->
              <%= render "basic_form" %>
      <% end %>
      
    </div>
  </div>
</div>